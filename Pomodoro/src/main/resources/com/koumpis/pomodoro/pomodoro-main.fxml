<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="274.0" prefWidth="295.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.koumpis.pomodoro.PomodoroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <GridPane prefHeight="231.0" prefWidth="296.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="54.0" minHeight="26.0" prefHeight="26.0" valignment="CENTER" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="29.0" minHeight="1.0" prefHeight="29.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button contentDisplay="CENTER" onAction="#start" prefHeight="25.0" prefWidth="71.0" text="Start" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets left="25.0" />
            </GridPane.margin>
         </Button>
          <Button cancelButton="true" contentDisplay="CENTER" onAction="#cancel" prefHeight="25.0" prefWidth="81.0" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets left="25.0" />
            </GridPane.margin>
         </Button>
         <Label text="Set time:">
            <GridPane.margin>
               <Insets left="25.0" />
            </GridPane.margin></Label>
         <TextField fx:id="timeSetter" GridPane.columnIndex="1" />
         <Label fx:id="timerText" prefHeight="33.0" prefWidth="84.0" text="Timer" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets left="20.0" />
            </GridPane.margin>
         </Label>
      </children>
   </GridPane>
</VBox>
